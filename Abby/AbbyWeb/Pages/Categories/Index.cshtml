@page
@model AbbyWeb.Pages.Categories.IndexModel

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Category List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> &nbsp; New Category</a>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped" style="width: 100%;">
		<thead>
			<tr>
				<th>
					Category Name
				</th>
				<th>
					Display Order
				</th>
				<th></th>

			</tr>
		</thead>
		<tbody>
			@foreach(var c in Model.Categories)
			{
			<tr>
				<td width="50%">
					@*@c.Name*@
					@Html.DisplayFor(modelItem => c.Name)
				</td>
				<td width="30%">
					@*@c.DisplayOrder*@
					@Html.DisplayFor(modelItem => c.DisplayOrder)
				</td>
				<td>
					<div class="w-75 btn-group" role="group">
						<a asp-page="Edit" asp-route-id="@c.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil"></i></a>
						<a asp-page="Delete" asp-route-id="@c.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
					</div>
				</td>
			</tr>
			}
		</tbody>
	</table>

</div>